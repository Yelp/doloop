#!/usr/bin/env python
"""Prints out a CREATE TABLE to create one or more doloop tables."""
import optparse
import sys

import doloop


def main(args):
    parser = make_option_parser()
    options, tables = parser.parse_args()

    if not tables:
        parser.print_help()
        sys.exit(0)

    for table in args:
        print doloop.create_sql(table, id_type=options.id_type) + ';'
        print

def make_option_parser():
    usage = '%prog [options] table [table ...] | mysql -D dbname'
    description = ('Print SQL to create one or more task loop tables.')
    parser = optparse.OptionParser(usage=usage, description=description)

    parser.add_option(
        '-i', '--id-type', dest='id_type', default='INT',
        help='Type for the ID field (default: %default)')

    return parser


if __name__ == '__main__':
    main(sys.argv[1:])
